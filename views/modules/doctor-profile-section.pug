section.doctor-profile
    inner
        container
            box.menu
                a.menu-item(href=`/doctors/${id}/appointments`) Appointments
                a.menu-item.active(href=`/doctors/${id}/profile`) Profile
                a.menu-item(href=`/doctors/${id}/clinic`) Clinic
                a.menu-item(href='/logout') Logout
            box.window
                div.window-slab
                    div.photo
                        div.cover
                            i photo_camera
                        img(src=`/images/${doctor.profilePhoto}` id='show-cover' alt='Profile Photo')
                        input(type='file' id='profile-photo' accept='image/png, image/jpeg')
                    div.info
                        div.window-item
                            label(for='first-name') First Name
                            input(type='text' id='first-name' placeholder='Ex. Esha' value=`${doctor.firstName || ''}`)
                        div.window-item
                            label(for='last-name') Last Name
                            input(type='text' id='last-name' placeholder='Ex. Smith' value=`${doctor.lastName || ''}`)
                        div.window-item
                            label(for='experience') Experience
                            input(type='text' id='experience' placeholder='Ex. 12' value=`${doctor.experience || ''}`)
                div.window-item
                    label(for='qualifications') Qualifications
                    input(type='text' id='qualifications' placeholder='Ex. MBBS, DBS, etc' value=`${doctor.qualifications || ''}`)
                div.window-item
                    label(for='specializations') Specializations
                    input(type='text' id='specializations' placeholder='Ex. Gynecologist, Obstetrician, Infertility Specialist, etc' value=`${doctor.specializations || ''}`)
                div.window-item
                    label(for='description') Description
                    textarea(id='description' placeholder='Tell us about yourself' rows=6)= `${doctor.description || ''}`

                div.window-item.submit
                    button(type='submit') SAVE CHANGES