section.user-profile
    inner
        container
            box.menu
                a.menu-item(href=`/users/${id}/appointments`) Appointments
                a.menu-item.active(href=`/users/${id}/profile`) Profile
                a.menu-item(href='/logout') Logout
            box.window
                div.window-slab
                    div.photo
                        div.cover
                            i photo_camera
                        img(src=`/images/${user.profilePhoto || 'default.png'}` id='show-cover' alt='Profile Photo')
                        input(type='file' id='profile-photo' accept='image/png, image/jpeg')
                    div.info
                        div.window-item
                            label(for='first-name') First Name
                            input(type='text' id='first-name' placeholder='Ex. Esha' value=`${user.firstName || ''}`)
                        div.window-item
                            label(for='last-name') Last Name
                            input(type='text' id='last-name' placeholder='Ex. Smith' value=`${user.lastName || ''}`)
                        div.window-item
                            label(for='age') Your Age
                            input(type='text' id='age' placeholder='Ex. 24' value=`${user.age || ''}`)
                        div.window-item
                            label(for='gender') Your Gender
                            input(type='text' id='gender' placeholder='Ex. Male' value=`${user.gender || ''}`)

                div.window-item.submit
                    button(type='submit') SAVE CHANGES